<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9C6EC">
 <ImageButton
        android:id="@+id/homeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/home" 
        android:onClick="homeBtnClicked"/>
    <TextView
        android:id="@+id/textViewNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeBtn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:text="Name:"
        android:paddingLeft="10dp"
        android:textSize="18sp" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:text="Name:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textViewNameLabel"
        android:layout_marginTop="15dp"
        android:text="Email:"
        android:paddingLeft="10dp"
        android:textSize="18sp" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewEmailValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNameValue"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/textViewEmailLabel"
        android:text="Email:"
        android:textSize="18sp" 
 		android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true" android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textViewDealsLabel"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textViewNameValue"
        android:text="My Deals:"
        android:paddingLeft="10dp"
        android:textSize="23sp" />

	<ListView
	    android:id="@+id/listview"
	    android:layout_marginTop="15dp"
	    android:layout_width="wrap_content"
	    android:layout_height="200dp"
	    android:layout_below="@id/textViewDealsLabel" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/listview"
        android:paddingLeft="10dp"
        android:text="Let&apos;s add new deal!!"
        android:textAppearance="?android:attr/textAppearanceMedium" />
      <Button
        android:id="@+id/ConfirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="34dp"
        android:onClick="onContinueClicked"
        android:text="Continue>>" />

</RelativeLayout>